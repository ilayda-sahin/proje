    <!-- contact section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col">
                    <form>
                        <h4>
                            BOOK <span>APPOINTMENT</span>
                        </h4>



                        <div class="form-group">
                            <label for="inputDepartmentName1">Klinik</label>
                            <select class="form-control wide" id="inputDepartmentName1">
                                @foreach (var clinic in Model)
                                {
                                    <option value="@clinic.ClinicId">
                                        @clinic.ClinicName
                                    </option>
                                    @foreach (var department in clinic.Departments)
                                    {
                                        <option value="@department.DepartmentId">
                                            @department.DepartmentName
                                        </option>
                                    }
                                }
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="inputDepartmentName1">Anabilimdalı</label>
                            <select class="form-control wide" id="inputDepartmentName1">
                                @foreach (var clinic in Model)
                                {
                                   
                                    @foreach (var department in clinic.Departments)
                                    {
                                        <option value="@department.DepartmentId">
                                            @department.DepartmentName
                                        </option>
                                    }
                                }
                            </select>
                        </div>


                       


                        <div class="form-group">
                            <label for="inputDepartmentName1">Doktor</label>
                            <select class="form-control wide" id="inputDepartmentName1">
                                @foreach (var clinic in Model)
                                {

                                    @foreach (var department in clinic.Departments)
                                    {

                                        @foreach (var doctor in department.Doctors)
                                        {
                                            <option value="@doctor.DoctorId">
                                                @doctor.DoctorName
                                                
                                            </option>
                                            @foreach (var appointment in doctor.Appointments)
                                            {
                                                <option value="@appointment.AppointmentId">
                                                    @appointment.DateTime
                                                </option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>






                        <div class="form-group">
                            <label for="inputDepartmentName1">Randevu Tarihi</label>
                            <select class="form-control wide" id="inputDepartmentName1">
                                @foreach (var clinic in Model)
                                {

                                    @foreach (var department in clinic.Departments)
                                    {

                                        @foreach (var doctor in department.Doctors)
                                        {
                                            
                                            @foreach (var appointment in doctor.Appointments)
                                            {
                                                <option value="@appointment.AppointmentId">
                                                    @appointment.DateTime
                                                </option>
                                            }
                                        }
                                    }
                                }
                            </select>
                        </div>
                       
                    </form>
                </div>
